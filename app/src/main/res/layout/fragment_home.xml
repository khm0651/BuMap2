<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/predict_time_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/home_fragment_predict_time"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:background="@drawable/home_fragment_predict_all_conner">

            <TextView
                android:id="@+id/predict_tiem_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="도착지까지 예상 소요시간 : 5~7분"
                android:textSize="15dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/predict_tiem_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:text="X"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <include
        layout="@layout/btn_keyword_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:id="@+id/markerCreateAllow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/markerCreate"
        android:layout_toLeftOf="@+id/rentRoomMarkerCreate"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/marker_solid"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/markerCreateOKImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/markerCreateOKText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/markerCreateOKImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="확인"
                android:textSize="8dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/markerCreate"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toLeftOf="@+id/markerBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/marker_solid"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/markerCreateImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/markeron" />

            <TextView
                android:id="@+id/markerCreateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/markerCreateImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="생성"
                android:textSize="8dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rentRoomMarkerCreate"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/markerBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/marker_solid"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/rentRoomMarkerCreateImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/markeron" />

            <TextView
                android:id="@+id/rentRoomMarkerCreateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rentRoomMarkerCreateImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="생성"
                android:textSize="8dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/markerBtn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/marker_solid"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/markerImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/markeron" />

            <TextView
                android:id="@+id/markerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/markerImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="ON"
                android:textSize="8dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomeSheet_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_navigation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            >

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/upscroll_bottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container_recyclerview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="5dp"
                android:visibility="gone"
                >

                <com.google.android.material.chip.Chip
                    android:id="@+id/more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIcon="@drawable/upscroll"
                    app:chipIconSize="30dp"
                    app:chipBackgroundColor="@android:color/white"
                    android:text="more"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    >


                </com.google.android.material.chip.Chip>

            </com.google.android.material.chip.ChipGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bottom_navigation_container_recyclerview"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:elevation="10dp"
                android:background="@android:color/white"
                android:fitsSystemWindows="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >



            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</RelativeLayout>


