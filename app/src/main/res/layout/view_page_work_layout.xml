<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_work_view_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="35dp"
    android:background="@drawable/bottom_solid">

    <TextView
        android:id="@+id/work_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/title_layout_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/work_date"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/title_work"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="12dp"
            android:lineHeight="22dp"/>

        <TextView
            android:id="@+id/isPresent_work"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="미제출"
            android:textSize="12dp"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/content_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout_work"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:text="내용"
        android:lineHeight="22dp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

</RelativeLayout>