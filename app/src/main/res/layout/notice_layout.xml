<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/notice_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="35dp"
    android:background="@drawable/bottom_solid"

    >

    <TextView
        android:id="@+id/notice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020.08.28"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@id/notice_date"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/notice_num"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:text="10000"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="[취업진로지원처] 2020학년도 100% 성공취업지원 상반기(하계방학) 실시간 온라인 교육과정"
            android:lineHeight="22sp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            />

    </LinearLayout>

</RelativeLayout>