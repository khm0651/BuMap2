<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RentRoomCreateMarkerActivity">

    <FrameLayout
        android:id="@+id/rent_room_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/markerCreateAllow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/markerCreate"
        android:layout_toLeftOf="@+id/rentRoomMarkerCreate"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/marker_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/markerCreateOKImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/markerCreateOKText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/markerCreateOKImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="확인"
                android:textSize="8dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>