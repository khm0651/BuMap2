<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.bumap.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_galleryFragment"
            app:destination="@id/nav_gallery" />
        <action
            android:id="@+id/action_homeFragment_to_slideshowFragment"
            app:destination="@id/nav_slideshow" />
        <action
            android:id="@+id/action_nav_home_to_searchFragment"
            app:destination="@id/searchFragment" />
        <argument
            android:name="lat"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="lng"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="isShowPredictTime"
            app:argType="boolean" />

    </fragment>
    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.bumap.ui.gallery.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery" />
    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.bumap.ui.slideshow.SlideshowFragment"
        android:label="fragment_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.bumap.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="false"
            />

    </fragment>
</navigation>